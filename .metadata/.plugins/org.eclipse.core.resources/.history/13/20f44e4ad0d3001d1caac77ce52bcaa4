package Recipe_Management;

import java.awt.*;
import java.util.*;

import javax.swing.*;

public class ListPage extends JPanel{

	ArrayList<Recipe> myRecipes;
	CardLayout card;
	JPanel pMain = new JPanel();
	JPanel p1 = new JPanel(), p2 = new JPanel();
	
	public ListPage(ArrayList<Recipe> myRecipes) {
		this.myRecipes = myRecipes;
		
		add(pMain);
		
		pMain.setBackground(Color.white);
		pMain.setLayout(card =new CardLayout());
		pMain.add(p1, "btList");
		pMain.add(p2, "Detail");
		
		for(Recipe rcp:myRecipes) {
			JPanel pTemp = new JPanel();
			pTemp.add(new JLabel(myRecipes.indexOf(rcp)+". "));
			pTemp.add(new JButton(rcp.getFName()));
			p1.add(pTemp);
		}
	}

}
