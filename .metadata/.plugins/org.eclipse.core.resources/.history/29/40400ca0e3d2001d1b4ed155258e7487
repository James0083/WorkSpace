package Recipe_Management;

import java.util.*;

import my.com.JobSeeker;

public class RecipeApp {
	Scanner sc = new Scanner(System.in);
	ArrayList<Recipe> myRecipes = new ArrayList<>();
	int count = 0;
	
	public void menu() {
		System.out.println("------JobKoreaApp v1.1------");
		System.out.println(" 1. 레시피 등록");
		System.out.println(" 2. 레시피 출력");
		System.out.println(" 3. 레시피 삭제");
//		System.out.println(" 4. 레시피 편집");
		System.out.println(" 9. 종  료");
		System.out.println("----------------------------");
		System.out.println(" 메뉴 번호를 선택하세요 =>");
		System.out.println("----------------------------");
		
	}
	
	public void registerRecipe() {
		Recipe rcp = new Recipe();
		
		rcp.input();
		String info = rcp.RecipeToString();
		System.out.println(info);
		System.out.println(">>위 정보를 등록할까요? [1.yes 2.no]");
		//arr에 저장하기
		int no = sc.nextInt();
		if(no==1) {
			myRecipes.add(rcp);
			System.out.println("등록 완료!! 현재 등록 인원: "
							+myRecipes.size()+"명");
		}else {
			System.out.println("등록을 취소하였습니다!!");
		}
	}
	
	public void printRecipe() {
		System.out.println("***총 "+count+"명의 구직자***");
		
		for(Recipe rcp:myRecipes) {
			if(rcp != null) {
				System.out.println(rcp.RecipeToString());
			}
		}
	}
	
	public Recipe searchRecipe() {
		System.out.print("검색할 제목 : ");
		String str = sc.nextLine();
		Recipe srcp = new Recipe(); 
		for(Recipe rcp:myRecipes) {
			if(rcp.compareRecipe(str)) {
				srcp = rcp;
				break;
			}
		}
		return srcp;
	}
	
	
	public static void main(String[] args) {
		RecipeApp app = new RecipeApp();
		while(true) {
			app.menu();
			int num= app.sc.nextInt();
			if(num==9) {
				System.out.println("Bye Bye~~");
				break;
			}
			if(num<1||num>4) {
				System.out.println("메뉴에 없는 번호에요. 다시 입력하세요.");
				continue;
			}
			
			switch (num) {
			case 1: //레시피 등록
				app.registerRecipe();
				break;
			case 2: //모든 레시피 목록 출력
				app.printRecipe();
				break;
			case 3: //검색
				Recipe Srcp = app.searchRecipe();
				System.out.println(Srcp.RecipeToString());
				break;
			case 4: //삭제
//				app.printCompany();
				break;
			}
		}//while ---
	}

}
