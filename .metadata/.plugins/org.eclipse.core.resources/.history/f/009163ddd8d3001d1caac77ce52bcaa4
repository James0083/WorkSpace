package Recipe_Management;

import java.awt.*;
import java.util.*;

import javax.swing.*;

public class ListPage extends JPanel{

	HomeGUI app;
//	ArrayList<Recipe> myRecipes;
	ArrayList<JPanel> ListPanel;
	CardLayout card;
	JPanel pMain = new JPanel();
	JPanel p1 = new JPanel(), p2 = new JPanel();
	JTextArea ta;
	String str = "";
	
	public ListPage(HomeGUI mav) {
		this.app = mav;
		
//		add(pMain);
		
		setBackground(Color.white);
		setLayout(card =new CardLayout());
		add(p1, "btList");
		add(p2, "Detail");
		
		p1.setLayout(new BorderLayout());
		
		for(Recipe rcp:app.myRecipes) {
//			System.out.println(rcp.RecipeToString());
			str+= (app.myRecipes.indexOf(rcp)+". ");
			str+= (rcp.getFName()+"\n");

			System.out.println(rcp.getFName()+"-a");
			System.out.println(str);
			
			JPanel pTemp = new JPanel();
			pTemp.add( new JLabel( app.myRecipes.indexOf(rcp)+". " ) );
			pTemp.add(new JButton(rcp.getFName()));
			ListPanel.add(pTemp);
			p1.add(ListPanel.get(ListPanel.size()-1));
//			System.out.println(rcp.RecipeToString());
			
			p1.add( new JLabel( app.myRecipes.indexOf(rcp)+". " ) );
			p1.add(new JButton(rcp.getFName()));
		}
		
		p1.add(new JLabel(str));
		JScrollPane sp = new JScrollPane(ta = new JTextArea(str));
		p1.add(sp, "Center");
		ta.setText(getList());

//		p1.add( new JLabel( "11. " ));
//		p1.add(new JButton("test"));
//		JPanel pTemp = new JPanel();
//		pTemp.add( new JLabel(  "333. " ) );
//		pTemp.add(new JButton("test333"));
//		p1.add(pTemp);
	}
	
	public String getList() {
		for(Recipe rcp:app.myRecipes) {
//			System.out.println(rcp.RecipeToString());
			str+= (app.myRecipes.indexOf(rcp)+". ");
			str+= (rcp.getFName()+"\n");
		}
		return str;
	}

}
